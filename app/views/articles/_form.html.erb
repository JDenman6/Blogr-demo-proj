

<%= form_for(@article) do |field| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= field.label :title %><br />
    <%= field.text_field :title %>
  </p>
  <p>
    <%= field.label :body %><br />
    <%= field.text_area :body %>
  </p>
  <p>
    <%= field.submit %>
  </p>
  <% end %>
